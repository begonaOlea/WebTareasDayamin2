<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
<servlet>
        <servlet-name>TareaServlet</servlet-name>
        <servlet-class>com.tarea.web.TareaServlet</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>AltaTareaServlet</servlet-name>
        <servlet-class>com.tarea.web.AltaTareaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AltaUsuarioServlet</servlet-name>
        <servlet-class>com.tarea.web.AltaUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TareaServlet</servlet-name>
        <url-pattern>/lista-tarea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaTareaServlet</servlet-name>
        <url-pattern>/form-alta-tarea</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaUsuarioServlet</servlet-name>
        <url-pattern>/form-alta-usuario</url-pattern>
    </servlet-mapping>   
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
